<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arvo</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
<!--        <item name="android:buttonStyle">@style/ButtonStyle</item>-->
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="HeadingStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.TextView">

    </style>

</resources>
