<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransportationStayingLocalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transportationStayingLocalPageHeading"
            style="@style/HeadingStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/transportationStayingLocalHeadingStr"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/lawsEducationButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/lawsEducationButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transportationMenuPageHeading" />

        <TextView
            android:id="@+id/transportationStayingLocalOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transportationStayingLocalOverviewStr" />

        <Button
            android:id="@+id/transportationStayingLocalSubwayHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="performStartSubwayPage"
            android:text="@string/transportationStayingLocalSubwayStr" />

        <Button
            android:id="@+id/transportationStayingLocalBusHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="performStartBusPage"
            android:text="@string/transportationBusStr" />

        <Button
            android:id="@+id/transportationStayingLocalFerry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="performStartFerryPage"
            android:text="@string/transportationStayingLocalFerryStr" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>